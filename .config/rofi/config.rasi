configuration {
 modi: "window,run,drun";
 kb-cancel: "Escape,Alt+F1";
 drun-display-format: "{icon} {name}";
 show-icons: true;
 icon-theme: "Papirus Dark";
 font: "OpenDyslexic Nerd Font 14";
 }
 
 @theme "/dev/null"
 
 * {
    background-color: #c0c0c000;
    text-color: #ffffff;
  }
  mainbox {
    border: 0;
    border-radius: 20px 20px 20px 20px;
    border-color: #ffffff;
    background-color: #000000;
  }
  inputbar {
    children: [textbox-prompt-colon,entry,case-indicator];
    border: 2;
    border-radius: 20px 20px 0 0;
    border-color: #ffffff;
  }
  element-text {
    background-color: inherit;
    text-color: inherit;
  }
  element selected {
    border: 2;
    border-color: #ffffff;
    background-color: #000000;
    text-color: #ffffff;
  }
  window {
    border: 2;
    border-radius: 20px 20px 20px 20px;
    border-color: #ffffff;
    transparency: "screenshot";
  }
  textbox-prompt-colon {
    expand: false;
    str: " Run:";
    margin: 0px 0.1em 0em 0em;
    text-color: #ffffff;
  }
